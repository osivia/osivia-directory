<div class="form-group row align-items-center">
    <!-- Avatar -->
    <div class="col-md-3 col-lg-2 text-right">
        <img src="${card.person.avatar.url}" alt="" class="avatar h1 mb-0">
    </div>
    
    <!-- Display name -->
    <div class="col-md-9 col-lg-10">
        <h3 class="h1 mb-0">
            <span>${card.person.title}</span>
            <span>${card.person.displayName}</span>
        </h3>
    </div>
</div>
