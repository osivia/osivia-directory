<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">

	<portlet>
		<description>Portlet Toutatice Gestion des Personnes</description>
		<portlet-name>toutatice-identite-gestionpersonnes-portailPortlet</portlet-name>
        <display-name>Toutatice - Gestion des Personnes</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

		<!--  Fichier de configuration Spring de l'application --> 
		<init-param>
			<name>contextConfigLocation</name>
			<value>
			classpath:annuaire-beans.xml
			/WEB-INF/applicationContext.xml</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Toutatice - Gestion des Personnes</title>
		</portlet-info>
	</portlet>
	
	
</portlet-app>
