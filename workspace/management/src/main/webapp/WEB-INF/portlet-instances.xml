<?xml version="1.0" standalone="yes"?>
<!DOCTYPE deployments PUBLIC
   "-//JBoss Portal//DTD Portlet Instances 2.6//EN"
   "http://www.jboss.org/portlet/dtd/portlet-instances_2_6.dtd">
<deployments>
	<deployment>
		<if-exists>overwrite</if-exists>
		<instance>
			<display-name xml:lang="fr">Toutatice - Gestion des Espaces de travail</display-name>
			<instance-id>toutatice-workspace-gestionworkspace-portailPortletInstance</instance-id>
			<portlet-ref>toutatice-workspace-gestionworkspace-portailPortlet</portlet-ref>
			<security-constraint>
            	<policy-permission>
               		<action-name>admin</action-name>
               		<role-name>Administrators</role-name>
           		 </policy-permission>
            	<policy-permission>
               <action-name>view</action-name>
               		<unchecked/>
            	</policy-permission>
         	</security-constraint>	
		</instance>
	</deployment>
	
    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="fr">Toutatice - Gestion des Espaces de travail plugin</display-name>
            <instance-id>toutatice-workspace-gestionworkspace-plugin-instance</instance-id>
            <portlet-ref>toutatice-workspace-gestionworkspace-plugin</portlet-ref>
            
            <preferences>
                <preference>
                    <name>hide</name>
                    <value>true</value>
                </preference>
            </preferences>
        </instance>
    </deployment>	
</deployments>


