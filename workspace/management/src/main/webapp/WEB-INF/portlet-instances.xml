<?xml version="1.0" standalone="yes"?>
<!DOCTYPE deployments PUBLIC "-//JBoss Portal//DTD Portlet Instances 2.6//EN" "http://www.jboss.org/portlet/dtd/portlet-instances_2_6.dtd">

<deployments>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <display-name xml:lang="en">Directory - Workspace management</display-name>
            <display-name xml:lang="fr">Annuaire - Gestion des espaces de travail</display-name>
            <instance-id>directory-workspace-management-instance</instance-id>
            <portlet-ref>directory-workspace-management</portlet-ref>
            <security-constraint>
                <policy-permission>
                    <action-name>admin</action-name>
                    <role-name>Administrators</role-name>
                </policy-permission>
                <policy-permission>
                    <action-name>view</action-name>
                    <unchecked />
                </policy-permission>
            </security-constraint>
        </instance>
    </deployment>

    <deployment>
        <if-exists>overwrite</if-exists>
        <instance>
            <instance-id>directory-workspace-management-plugin-instance</instance-id>
            <portlet-ref>directory-workspace-management-plugin</portlet-ref>
            <preferences>
                <preference>
                    <name>hide</name>
                    <value>true</value>
                </preference>
            </preferences>
        </instance>
    </deployment>

</deployments>
