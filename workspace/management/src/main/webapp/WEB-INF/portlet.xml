<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="2.0">

	<portlet>
		<portlet-name>directory-workspace-management</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

		<init-param>
			<name>contextConfigLocation</name>
			<value>classpath:directory-beans.xml /WEB-INF/directory-workspace-management-portlet.xml</value>
		</init-param>
		
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>admin</portlet-mode>
		</supports>
		
		<portlet-info>
			<title>Workspace management</title>
		</portlet-info>
	</portlet>
	
	<portlet>
		<portlet-name>directory-workspace-management-plugin</portlet-name>
		<portlet-class>fr.toutatice.workspace.portail.gestionWorkspace.plugin.GestionWorkspacePlugin</portlet-class>
        
		<expiration-cache>180</expiration-cache>

		<supports>
			<mime-type>text/html</mime-type>
		</supports>

		<portlet-info>
			<title>Workspace management plugin</title>
		</portlet-info>
	</portlet>    

</portlet-app>
