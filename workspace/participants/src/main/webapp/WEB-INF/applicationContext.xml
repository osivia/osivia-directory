<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

     
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>Resource_fr</value>
			</list>
		</property>
	</bean>

	<!-- Default View Resolver -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
		<property name="exposedContextBeanNames">
        	<list><value>config</value></list>
    	</property>
	</bean>

	<context:annotation-config />

	<bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping" />

	<context:component-scan base-package="fr.toutatice.workspace.portail.participantsWorkspace" />
	<context:component-scan base-package="fr.toutatice.workspace.portail.participantsWorkspace.nuxeo" />

	<bean id="placeholderConfigMetier"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:///${PORTAL_PROP_FILE}</value>
			</list>
		</property>
	</bean>

	<bean id="participantsWorkspaceController"
		class="fr.toutatice.workspace.portail.participantsWorkspace.ParticipantsWorkspaceController">
	</bean>
	
	<bean id="adminController" 
		class="fr.toutatice.workspace.portail.participantsWorkspace.AdminController">
	</bean>
	
	<bean id="defaultExceptionHandlerTemplate" class="org.springframework.web.portlet.handler.SimpleMappingExceptionResolver" abstract="true">
		<property name="defaultErrorView" value="erreur" />
		<property name="exceptionMappings">
			<props>
				<prop key= "com.ibm.developerworks.contact.exception.DuplicateContactIdException">
					erreur
				</prop>
				<prop key="java.lang.NullPointerException">
					erreur
				</prop>
			</props>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="defaultExceptionHandlerTemplate" />
	
	<bean id="portletModeHandlerMapping" class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
                <property name="portletModeMap">
                        <map>								
                                <entry key="view"><ref bean="participantsWorkspaceController"/></entry>
                                <entry key="admin"><ref bean="adminController"/></entry>
                        </map>
                </property>
      </bean>
</beans>
